		System.out.println("*******ATM MACHINE*******");
		System.out.print("Enter the total number of Students to add their details :");
		int n=sc.nextInt();
		Student[] s=new Student[n];
		
	        System.out.println("***Input the asked details***");
	        for(int i=0;i<n-1;i++)
	        {
	        System.out.print("Enter Student Id :");
	        s[i].stud_id = sc.nextInt(); 
	        
	        System.out.print("Enter Age :");
	        s[i].age = sc.nextInt();
	        
	        sc.nextLine();
	        System.out.print("Enter Name Of The Student :");
	        s[i].stud_name = sc.nextLine();
	        
	        System.out.print("Enter Gender :");
	        s[i].gender = sc.next();
	        
	        sc.nextLine();
	        System.out.print("Enter Address :");
	        s[i].address = sc.nextLine();
	        
	        System.out.print("Enter Contact Number :");
	        s[i].contact_number=sc.nextLine();
	        
	        System.out.print("Enter Aadhar Number :");
	        s[i].aadhar_number=sc.nextLine();
	        }
	       
